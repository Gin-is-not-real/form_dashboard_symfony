{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <header class="section-header">
        <h1>Category</h1>
        <div>
            <a href="{{ path('category_index') }}">back to list</a>
        </div>
    </header>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <footer class="footer-actions">
        <button class=" btn-edit btn-round"><a href="{{ path('category_edit', {'id': category.id}) }}">edit</a></button>

        {{ include('category/_delete_form.html.twig') }}
    </footer>

{% endblock %}
