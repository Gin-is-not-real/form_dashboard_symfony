{% extends 'base.html.twig' %}

{% block title %}Receipt index{% endblock %}

{% block body %}
    <h1>Receipt index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for receipt in receipts %}
            <tr>
                <td>{{ receipt.id }}</td>
                <td>{{ receipt.name }}</td>
                <td class="td-actions">
                    <a href="{{ path('receipt_show', {'id': receipt.id}) }}">show</a>
                    <a href="{{ path('receipt_edit', {'id': receipt.id}) }}">edit</a>

                    {{ include('receipt/_delete_form.html.twig') }}

                    {# <a href="{{ path('receipt_delete', {'id': receipt.id}) }}">delete</a> #}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('receipt_new') }}">Create new</a>
{% endblock %}
