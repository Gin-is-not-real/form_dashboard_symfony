{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <header class="section-header">
        <h1>Product</h1>
        <div>
            <a href="{{ path('product_index') }}">back to list</a>
        </div>
    </header>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>
                    <ul>
                        {% for cat in product.category %}
                            <li>{{ cat }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ product.ref }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }} â‚¬</td>
            </tr>
            <tr>
                <th>Advice</th>
                <td>{{ product.advice }}</td>
            </tr>
            <tr>
                <th>Purchase_date</th>
                <td>{{ product.purchaseDate ? product.purchaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Warranty_end_purchase</th>
                <td>{{ product.warrantyEndPurchase ? product.warrantyEndPurchase|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Manual</th>
                <td>
                    {% if product.manual != null %}
                        <a href="{{ asset('uploads/' ~  product.manual.name ) }}" onclick="window.open(this.href); return false;">{{ product.manual }}</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Receipt</th>
                <td>
                    {% if product.receipt != null %}
                        <a href="{{ asset('uploads/' ~  product.receipt.name ) }}" onclick="window.open(this.href); return false;">
                            <img src="{{ asset('uploads/' ~  product.receipt.name ) }}" alt="" width="50px" height="auto" >
                        </a>
                        {# <a href="{{ asset('uploads/' ~  product.receipt.name ) }}" onclick="window.open(this.href); return false;">{{ product.receipt.name }}</a> #}
                    {% endif %}
                
                </td>

            </tr>
        </tbody>
    </table>

    <footer class="footer-actions">
        <button class=" btn-edit btn-round"><a href="{{ path('product_edit', {'id': product.id}) }}">edit</a></button>
        {{ include('product/_delete_form.html.twig') }}
    </footer>


    {# <a href="{{ path('product_index') }}">back to list</a> #}

{% endblock %}
