<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# the CSS file lives at "public/css/style.css" #}
        <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {# <link href="{{ asset('css/style.css') }}" rel="stylesheet"/> #}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="{{ asset('js/delete.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><a href="{{ path('product_index') }}">Products index</a></li>
                    <li><a href="{{ path('category_index') }}">Categories index</a></li>
                    <li><a href="{{ path('receipt_index') }}">Receipt index</a></li>
                    <li><a href="{{ path('manual_index') }}">Manual index</a></li>
                </ul>
            </nav>

            <div>
                <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        </header>

<hr>
{% if error is defined %}
    {% for e in error %}
        <div>{{ e }}</div>
    {% endfor %}
{% endif %}

        {% block body %}{% endblock %}
    </body>
</html>
